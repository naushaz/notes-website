<!DOCTYPE html>
<html lang="en">
<head>
  <title>All Notes</title>
</head>
<body>
  <h1>All Uploaded Notes</h1>

  <% if (isAdmin) { %>
    <p>Welcome Admin | <a href="/logout">Logout</a></p>
  <% } else { %>
    <p><a href="/login">Admin Login</a></p>
  <% } %>

  <ul>
    <% notes.forEach(note => { %>
      <li>
        <strong>Title:</strong> <%= note.title %> <br>
        Uploaded by: <%= note.uploaderName %> (<%= note.uploaderEmail %>) <br>
        <a href="/<%= note.filePath %>" target="_blank">View PDF</a>
        <% if (isAdmin) { %>
          |
          <form action="/delete/<%= note._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        <% } %>
      </li>
      <br>
    <% }); %>
  </ul>

</body>
</html>
