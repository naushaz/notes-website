<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>All Notes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f0f2f5; font-family: 'Poppins', sans-serif; }
    .container { margin-top: 50px; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="text-center mb-4">All Uploaded Notes</h2>

    <% if (isAdmin) { %>
      <p class="text-end"><strong>Welcome Admin</strong> | <a href="/logout">Logout</a></p>
    <% } else { %>
      <p class="text-end"><a href="/login">Admin Login</a></p>
    <% } %>

    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>Title</th>
          <th>Uploader Name</th>
          <th>Uploader Email</th>
          <th>File</th>
          <% if (isAdmin) { %> <th>Action</th> <% } %>
        </tr>
      </thead>
      <tbody>
        <% notes.forEach(note => { %>
          <tr>
            <td><%= note.title %></td>
            <td><%= note.uploaderName %></td>
            <td><%= note.uploaderEmail %></td>
            <td><a href="/<%= note.filePath %>" target="_blank" class="btn btn-sm btn-success">View PDF</a></td>
            <% if (isAdmin) { %>
              <td>
                <form action="/delete/<%= note._id %>" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
